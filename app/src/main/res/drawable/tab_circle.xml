<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:gravity="top" android:bottom="30dp" android:top="30dp" android:left="10dp" android:right="10dp">
                <shape>
                    <stroke android:width="1dp" android:color="@color/colorAccent" />
                    <corners android:radius="20dp" />
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="10dp"
                        android:bottom="10dp" />
                </shape>
            </item>
            <item android:gravity="bottom">
                <shape>
                <solid android:color="@android:color/transparent" />
                <corners android:radius="20dp" />
                <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
            </shape>
            </item>
        </layer-list>
    </item>
</selector>